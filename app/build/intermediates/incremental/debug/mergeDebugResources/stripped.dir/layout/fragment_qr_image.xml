<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRImageFragment"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/qr_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="QR Type"
        android:textSize="35dp"/>

    <ImageView
        android:id="@+id/qr_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="20dp"
        android:background="@drawable/rectangle_shape"/>

    <Button
        android:id="@+id/download_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download QR Image"/>

    <Button
        android:id="@+id/share_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share QR Image"/>

    <Button
        android:id="@+id/delete_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete QR Image"/>

</LinearLayout>